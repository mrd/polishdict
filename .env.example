# Flask Web Application Configuration
# Copy this file to .env and customize as needed

# Host to bind the Flask server to
# Use 0.0.0.0 to make it accessible from other machines on the network
# Use 127.0.0.1 (default) to only allow local connections
FLASK_HOST=127.0.0.1

# Port to run the Flask server on
FLASK_PORT=5000

# Enable/disable Flask debug mode
# Set to False in production environments
FLASK_DEBUG=True
